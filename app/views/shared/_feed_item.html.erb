<li>
	<span class="auctiontitle"><%= feed_item.title %></span>
	<span class="content"><%= simple_format feed_item.content %></span>
	<span class="timestamp">
		Created <%= time_ago_in_words(feed_item.created_at) %> ago by <%= feed_item.user.name %>.
	</span>
	<% if admin?(current_user) %>
		<%= link_to "edit", edit_auction_path(feed_item), data: { confirm: "You sure?" }, title: feed_item.content %>
		<%= link_to "delete", auction_path(feed_item), method: :delete, data: { confirm: "You sure?" }, title: feed_item.content %>
	<% end %>
</li>