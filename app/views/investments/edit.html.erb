<% provide(:title, "Edit Investment") %>
	<h1>Update Investment</h1>
	<div class="row">
		<div class="span6 offset3">
			<%= form_for(@investment) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>
				<div class="field">
					<%= f.label :amount %>
					<%= f.text_field :amount %>
				</div>
					<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>